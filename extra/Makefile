TOPDIR = ..

SUBDIRS=plugins

# these are autogenerated from .in files, and removed by "make clean"!
generated_files = rmake.init rmake.recipe rmake.spec

extra_dist = Makefile rmake.spec rmake.gentoo.init

dist_files = $(wildcard *.in) $(extra_dist)

all: default-all $(generated_files)

install-mkdirs:
	mkdir -p $(DESTDIR)$(initdir)

install: install-mkdirs rmake.init
	install -m755 rmake.init $(DESTDIR)/$(initdir)/rmake

install-client:

$(generated_files) : % : %.in $(TOPDIR)/Make.defs $(TOPDIR)/Makefile
	sed -e 's^@rmakepath@^$(rmakepath)^g' \
	    -e 's^@conarypath@^$(libdir)/python2.4/site-packages/conary^g'  \
	    -e 's^@version@^$(VERSION)^g' \
	    -e 's^@ccsversion@^$(CCSVERSION)^g' \
	    -e 's^@bindir@^$(bindir)^g' \
	    -e 's^@sbindir@^$(sbindir)^g' \
	    -e 's^@sysconfdir@^$(sysconfdir)^g' $< > $@

dist: $(dist_files) default-dist

clean: default-clean

include $(TOPDIR)/Make.rules
include $(TOPDIR)/Make.defs

# vim: set sts=8 sw=8 noexpandtab :
